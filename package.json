{
  "name": "@zerodevx/svelte-kit-starter",
  "version": "1.0.0",
  "description": "Opinionated starter template for web projects",
  "author": "Jason Lee <jason@zerodevx.com>",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "svelte-kit dev",
    "env:staging": "echo 'VITE_BUILD=\"staging\"' > .env",
    "env:production": "echo 'VITE_BUILD=\"production\"' > .env",
    "build": "svelte-kit build",
    "build:staging": "run-s env:staging build",
    "build:production": "run-s env:production build",
    "preview": "svelte-kit preview",
    "lint": "eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^1.0.0-next.18",
    "@sveltejs/kit": "next",
    "autoprefixer": "^10.3.7",
    "cssnano": "^5.0.8",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.9",
    "postcss-load-config": "^3.1.0",
    "prettier": "~2.4.1",
    "prettier-plugin-svelte": "^2.4.0",
    "svelte": "^3.43.1",
    "svelte-preprocess": "^4.9.8",
    "tailwindcss": "^2.2.16"
  }
}
